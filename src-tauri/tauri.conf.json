{
  "$schema": "https://raw.githubusercontent.com/nickkuk/nickkuk.github.io/master/tauri-v2/tauri.conf.schema.json",
  "productName": "mdjax",
  "version": "0.1.0",
  "identifier": "com.mdjax.editor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "mdjax",
        "width": 900,
        "height": 650,
        "resizable": true,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128@2x.png",
      "icons/icon-512.png"
    ]
  }
}
